<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_invoice_document" inherit_id="account.report_invoice_document">
    <xpath expr="//div[@class='page']/div[@class='row'][2]//table" position="inside">
        <tr t-if="o.discount_percent and o.discount_due_date and o.discount_amount">
            <td>Total With a <span t-field="o.discount_percent"/> % discount for payment before <span t-field="o.discount_due_date"/></td>
            <t t-set="amount" t-value="o.amount_total - o.discount_amount" />
            <td class="text-right">
                <span t-esc="amount" t-esc-options='{"widget": "monetary", "display_currency": "res_company.currency_id"}'/>
            </td>
        </tr>
    </xpath>
</template>
</data>
</openerp>
