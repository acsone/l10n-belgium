<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="l10n_be_annual_account_xbrl_form_view">
        <field
            name="name"
        >l10n.be.annual.account.xbrl.form (in l10n_be_annual_account_xbrl)</field>
        <field name="model">l10n.be.annual.account.xbrl</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        id="button_confirmed"
                        name="action_confirmed"
                        string="Confirm"
                        class="btn-primary"
                        type="object"
                        states="draft"
                    />
                    <button
                        id="button_draft"
                        name="action_draft"
                        string="Set to draft"
                        class="btn-primary"
                        type="object"
                        states="confirmed"
                    />
                    <button
                        id="button_published"
                        name="action_published"
                        string="Set to published"
                        class="btn-primary"
                        type="object"
                        states="confirmed"
                    />
                    <button
                        id="button_download_xbrl"
                        name="action_download_xbrl"
                        string="Download XBRL Report"
                        type="object"
                        icon="fa-download"
                        class="oe_link oe_right"
                        states="confirmed, published"
                    />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                    <div class="oe_title">
                        <h1>
                            Report name :
                            <field
                                name="report_name"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="company_id"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="company_category"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="company_registry"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="schema_ref"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                        <group>
                            <field
                                name="date_range_id"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="date_from"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="date_to"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="bs_mis_report_template_id"
                                options="{'no_create': True}"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                            <field
                                name="pl_mis_report_template_id"
                                options="{'no_create': True}"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            />
                        </group>
                    </group>
                    <notebook>
                        <page string="Identifying data" name="identifying_data">
                            <group>
                                <group>
                                    <field
                                        name="commercial_court"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="date_recent_filing"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                </group>
                                <group>
                                    <field
                                        name="legal_form"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="date_general_assembly"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                </group>
                            </group>
                        </page>
                        <page string="Administrators" name="administrators">
                            <field
                                name="administrator_ids"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            >
                                <tree>
                                    <field name="name" />
                                    <field name="parent_id" />
                                    <field name="function" />
                                    <field name="city" />
                                    <field name="country_id" />
                                </tree>
                            </field>
                        </page>
                        <page string="Accountants" name="accountants">
                            <field
                                name="accountant_ids"
                                attrs="{'readonly': [('state', '!=', 'draft')]}"
                            >
                                <tree>
                                    <field name="name" />
                                    <field name="parent_id" />
                                    <field name="function" />
                                    <field name="city" />
                                    <field name="country_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="l10n_be_annual_account_xbrl_tree_view">
        <field
            name="name"
        >l10n.be.annual.account.xbrl.tree (in l10n_be_annual_account_xbrl)</field>
        <field name="model">l10n.be.annual.account.xbrl</field>
        <field name="arch" type="xml">
            <tree>
                <field name="report_name" />
                <field name="company_id" />
                <field name="legal_form" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="schema_ref" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="l10n_be_annual_account_xbrl_search_view" model="ir.ui.view">
        <field name="name">l10n.be.annual.account.xbrl.search</field>
        <field name="model">l10n.be.annual.account.xbrl</field>
        <field name="arch" type="xml">
            <search>
                <field name="report_name" />
                <separator />
                <filter
                    string="Archived"
                    name="archived"
                    domain="[('active', '=', False)]"
                />
                <separator />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_be_annual_account_xbrl_act_window">
        <field name="name">Annual Accounts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n.be.annual.account.xbrl</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create an annual account !
            </p>
        </field>
    </record>

    <menuitem
        id="mis_report_annual_account_menu"
        parent="account.menu_finance_reports"
        name="Annual Account"
        sequence="110"
    />
    <menuitem
        id="l10n_be_annual_account_view_menu"
        parent="mis_report_annual_account_menu"
        name="Belgium Annual Account"
        action="l10n_be_annual_account_xbrl_act_window"
        sequence="10"
    />
</odoo>
